@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Privilage Info";
}

<script>
    $(document).ready(function () {
        var URL = "@Url.Action("GetPrivilages", "Privilage")";
        $('#datatable-responsive').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": URL,
                "type": "POST",
                "dataType": "JSON"
            },
            "columns": [
            { "data": "Name", "orderable": true },
            { "data": "Description", "orderable": true },
            { "data": "Remarks", "orderable": true },
            { "data": "Action", "orderable": false }
            ]
        });
    });
</script>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Privilage <small>All Privilages</small></h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Privilage Info <small>List</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @*<p class="text-muted font-13 m-b-30">
                                Responsive is an extension for DataTables that resolves that problem by optimising the table's layout for different screen sizes through the dynamic insertion and removal of columns from the table.
                            </p>*@
                        <form class="form-horizontal form-label-left">
                            <div class="col-md-2 alignright">
                                <a href="@Url.Action("Create","Privilage")" class="btn btn-success btn-sm alignright"><i class="fa fa-file"></i> Create New</a>
                            </div>
                            <div class="clearfix"></div>
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th style="width: 20%">Name</th>
                                        <th>Description</th>
                                        <th>Remarks</th>
                                        <th style="width: 20%">Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
